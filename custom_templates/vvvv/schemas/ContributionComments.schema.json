{
    "$schema": "https://dotnet.github.io/docfx/schemas/v1.0/schema.json#",
    "version": "1.0.0",
    "id": "contribution-comments",
    "description": "The Schema for Contributions-Comments",
    "title": "ContributionComments",
    "type": "object",
    "properties": {
        "uid": {
            "type": "string",
            "contentType": "uid"
        },
        "comments": {
            "type": "array",
            "items": {
                "comment": {
                    "type": "object",
                    "properties": {
                        "nid": {
                            "type": "string"
                        },
                        "user": {
                            "type": "string"
                        },
                        "created": {
                            "type": "string"
                        },
                        "body": {
                            "type": "string",
                            "contentType": "markdown"
                        }
                    }
                }
            }
        }
    },
    "xrefProperties": [ "comments" ]
}